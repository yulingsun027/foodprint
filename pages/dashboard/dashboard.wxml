<view class="page-wrapper">

  <view class="card-product">
    <view class="top">Welcome Back</view> 
  </view>

<view class="dashboard-container">

<view class="allData" display: styles="flex; align-items: space-between;">
    <view bindtap="subtractDay" class="h1 dailybutton {{tabName == 'daily' ? 'activeTab' : ''}}" data-name="daily">Daily</view>

  <view  bindtap="subtractWeek" class="h1 weeklybutton {{tabName == 'weekly' ? 'activeTab' : ''}}" data-name="weekly">Weekly</view>
</view>

<view class="meal-type-header">
  <view class="allData" styles="flex; align-items: space-between; ">
      <view style="color: #ff6347; font-weight: bold;" class="h1">At Home</view>
      <view style="color: #53687E; font-weight: bold;" class="h1">Restaurant</view>
      <view style="color: #8F754F; font-weight: bold;" class="h1">Delivery</view>
      </view>
</view>

<view class="meal-type-percentages">
    <van-circle color="#ff6347" value="{{homePercentage}}" text="{{homePercentage}}%" />
    <van-circle color="#53687E" value="{{restaurantPercentage}}" text="{{restaurantPercentage}}%" />
    <van-circle color="#8F754F" value="{{deliveryPercentage}}" text="{{deliveryPercentage}}%" />
</view>


<view class="cost-percentage">
<view>View how much you spent on each location:</view>
<view class="progress-bar" style="margin-bottom: 20px">
  <van-progress class="progress-bar" pivot-text="{{homeCost}}rmb" stroke-width="10" color="#ff6347" percentage="{{homecostPerc}}" />
</view>
<view class="progress-bar" style="margin-bottom: 20px">
  <van-progress class="progress-bar" pivot-text="{{restaurantCost}}rmb" stroke-width="10" color="#53687E" percentage="{{rescostPerc}}"/>
</view>
<view class="progress-bar" style="margin-bottom: 20px">
  <van-progress class="progress-bar" pivot-text="{{deliveryCost}}rmb" stroke-width="10" color="#8F754F" percentage="{{delicostPerc}}" />
</view>
</view>

<view class="satisfaction-bar">
  <view class="page">
    <view class="page__hd">
        <view class="section section_gap">
            <text class="h1 section__title">Average level of satisfaction</text>
        </view>
    </view>
  </view>
</view>

<view class="happiness-rating">
  <van-rate
    value="{{ mood }}"
    size="{{ 50 }}"
    icon="like"
    void-icon="like-o"
  />
</view> 

<view class="user-login">
  <button class="button" wx:if="{{!currentUser}}" formType="submit" open-type="getUserInfo" bindgetuserinfo="userInfoHandler">Login to track your foodprint!</button>
</view>

</view>
</view>


