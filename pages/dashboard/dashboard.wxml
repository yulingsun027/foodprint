<view style="padding-top: 10px; padding-left: 10px;" class="page">
    <view class="page__hd">
        <view class="section section_gap">
            <text style="padding-left: 10px;" class="h1 section__title">Average level of satisfaction</text>
            <view class="body-view">
               <!-- <slider bindchange="sliderchange" role="slider" aria-valuemin="0" aria-valuemax="5" step="5" aria-valuenow="0" value="0" show-value=""/> -->
              <slider bindchange="sliderchange" max="5" show-value/>
            </view>
        </view>
    </view>
</view>

  <view style="margin-top: 5%;" class="allData">
    <view style="margin-left: 5%; margin-top: 5%; color: #ef9b11; font-weight: bold;" class="h1">At Home</view>
    <view style="margin-top: 5%; color: #f4d140; font-weight: bold;" class="h1">Restaurant</view>
    <view style="color: #fff77d; font-weight: bold; margin-top: 5%; margin-right: 5%;" class="h1">Delivery</view>

  <view class="circle-wrap">
    <view class="circle">
      <view class="mask full">
        <view class="fill"></view>
      </view>
      <view class="mask half">
        <view style="background-color: #ef9b11;" class="fill"></view>
      </view>
      <view class="inside-circle"> {{dailyHomePercentage}}% </view>
    </view>
  </view>

<view class="circle-wrap">
    <view class="circle">
      <view class="mask full">
        <view class="fill"></view>
      </view>
      <view class="mask half">
        <view style="background-color: #f4d140;" class="fill"></view>
      </view>
      <view class="inside-circle"> {{restaurantPercentage}}% </view>
    </view>
</view>




<view class="circle-wrap">
