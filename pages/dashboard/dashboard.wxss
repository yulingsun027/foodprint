.top-banner {
  text-align: center;
  font-size: larger;
  padding: 10px;
  color: white;
}
.card-product {
  overflow: hidden;
  height: 80px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.card-product .avatar {
  margin: 0 20px 0 70px;
}
.nickname {
  font-size: 18px;
}
.chartTitles {
  display: flex;
  align-items: space-between;
}
