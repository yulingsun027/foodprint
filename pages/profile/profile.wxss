
.card-product {
  overflow: hidden;
  height: 120px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.card-product .avatar {
  margin: 0 20px 0 40px;
}
.nickname {
  font-size: 20px;
  font-weight: bold;
}
.info-card {
  background: #F4E9E2;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-top: 30px;
  padding-left: 10px;
  padding-top: 10px;
}

.top-banner {
  background-color: #F4E9E2;
  border-radius: 0.25rem;
  box-shadow: 1.5px 2.5px 2.5px 1.5px rgba(0, 0, 0, 0.18);
  font-size: 200%;
  text-align: center;
  padding-top: 20px;
  padding-bottom: 20px;
}

.submission-container {
margin-top: 30px;
margin-left: auto;
margin-right: auto;
width: 20em;
}

.section {
  border-color: #b7b7b7;
  border-style: solid;
  border-radius: 10px;
  background: #F4E9E2;
  width: 100%;
  margin: 0 0 0.5em;
  float: center;
  padding-bottom: 30px;
}
.formButton {
padding-top: 20px;
color: #F4E9E2;

}
.formButton :active{
  color: #F4E9E2;
  top: 0.3em;
}

.h1 {
  font-weight: bold;
}