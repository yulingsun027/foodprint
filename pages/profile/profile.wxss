
.card-product {
  overflow: hidden;
  height: 120px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.card-product .avatar {
  margin: 0 20px 0 40px;
}
.nickname {
  font-size: 20px;
  font-weight: bold;
}
.info-card {
  background: #F4E9E2;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-top: 30px;
  padding-left: 10px;
  padding-top: 10px;
}

.h1 {
  font-weight: bold;
}