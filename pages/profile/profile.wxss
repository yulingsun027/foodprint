
.card-product {
  overflow: hidden;
  height: 120px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.card-product .avatar {
  margin: 0 20px 0 70px;
}
.nickname {
  font-size: 18px;
}
.info-card {
  font-size: larger;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  justify-content: top;
  align-items: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-top: 50px;
  padding-top: 50px;
  padding-bottom: 50px;
}