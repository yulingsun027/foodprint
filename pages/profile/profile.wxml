
<!--pages/profile/profile.wxml-->
<view class="page-wrapper">
<view class="card-product">
  <image class="avatar" src="{{currentUser.avatar}}"></image>
    <view class="card-product-infos">
    <view class="h1 nickname">Username:</view> 
    <view class="h1 nickname"> {{currentUser.nickname}} </view>
    </view>
</view>
<view class="info-card">
    <view class="card-product-infos">Gender:  {{gender}}</view>
    <view class="card-product-infos" >Age:  {{age}}</view>
    <view class="card-product-infos" >Height:  {{height}} CM</view>
    <view class="card-product-infos" >Weight:  {{weight}} KG</view>
</view>
</view>



