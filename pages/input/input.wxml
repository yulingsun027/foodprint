<view class="page-wrapper">

<view class="card-product">
    <view class="card-product-infos">
    <view class="h1">what did you eat today?</view> 
    </view>
</view>

<view class="wrapper">
 
  <slot></slot>
    <view >{{title}}</view>
 
         <!-- Date Modal Box -->
  <view class="modelboxbg"></view>
  <view class="modelbox">
    <view class = "model_picker">
         <view class = "button_model">
                         <text catchtap='canslebtn' >Cancel</text>
                         <text catchtap='closebtn' > OK</text>
            </view>
          <view class = "cont_model">
            <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{timevalue}}" catchchange="fnbindChange">
                         <!-- Year -->
              <picker-view-column wx:if="{{years.length > 0}}">
                <view wx:for="{{years}}" wx:key="{{index}}" style="line-height: 50px">{{item}}</view>
              </picker-view-column>
                             <!-- Month -->
              <picker-view-column wx:if="{{months.length > 0}}">
                <view wx:for="{{months}}" wx:key="{{index}}" style="line-height: 50px">{{item}}</view>
              </picker-view-column>
                             <!--   -->
              <picker-view-column wx:if="{{days.length > 0}}">
                <view wx:for="{{days}}" wx:key="{{index}}" style="line-height: 50px">{{item}}</view>
              </picker-view-column>
            </picker-view>
          </view>
   </view>  
  </view>
 
</view>

<view class="submission-container">
<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view style="padding-left: 10px;" class="h1 section__title">
      <picker mode="selector" bindchange="pickMeal" range="{{meal}}" placeholder="meal">Meal: {{userMeal}}</picker>
    </view>
  </view>

  <view class="questionBanner">
    <view class="h1 card-product-infos">What did you ear?</view>
</view>

<view class="section">
    <view style="padding-left: 10px;" class="h1 section__title">
      <picker mode="selector" bindchange="pickType" range="{{type}}" placeholder="type">Type of meal: {{userType}}</picker>
    </view>
  </view>

  <view class="questionBanner">
    <view class="h1 card-product-infos">How do you feel?</view>
</view>

<view class="section">
    <view style="padding-left: 10px;" class="h1 section__title">
      <picker mode="selector" bindchange="pickMood" range="{{mood}}" placeholder="mood">Mood on a scale of 1-5: {{userMood}}</picker>
    </view>
  </view>

  <view class="questionBanner">
    <view class="h1 card-product-infos">How much did you spend?</view>
</view>

<view class="section">
    <view style="padding-left: 10px;" class="h1 section__title">
      <picker mode="selector" bindchange="pickCost" range="{{cost}}" placeholder="cost">Cost: {{userCost}}</picker>
    </view>
  </view>
  
  <view class="h1 formButton">
    <button style="border-radius: 10px; color: #B2C7A8;" formType="post" bindtap="formSubmit">Save your updates</button>
  </view>
</form>
</view>
</view>
