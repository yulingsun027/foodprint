.card-product {
  overflow: hidden;
  height: 80px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.smallBanner {
  overflow: hidden;
  height: 30px;
  background: #Ffffff;
  display: flex;
  align-items: center;
}
.questionBanner {
  overflow: hidden;
  height: 30px;
  display: flex;
  align-items: center;
}
.info-card {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-left: 10px;
  padding-top: 10px
}
.submission-container {
  margin-top: 30px;
  margin-left: auto;
  margin-right: auto;
  width: 20em;
  }
  
  .section {
    border-color: #b7b7b7;
    border-style: solid;
    border-radius: 10px;
    background: #F4E9E2;
    width: 100%;
    margin: 0 0 0.5em;
    float: center;
    padding-bottom: 30px;
  }

  .myButton {
    box-shadow: 2px 4px 0px 0px #899599;
    background:linear-gradient(to bottom, #F4E9E2 5%, #F4E9E2 100%);
    background-color:#F4E9E2;
    border-radius:19px;
    display:inline-block;
    cursor:pointer;
    color:#B2C7A8;
    font-family:Arial;
    font-size:15px;
    font-weight:bold;
    padding:13px 37px;
    text-decoration:none;
     text-shadow:0px 0px 0px #e1e2ed;
     transition: 0.5s;
   }
   .myButton:hover {
    background:linear-gradient(to bottom, #ffff 10%, #F4E9E2 100%);
    background-color:#F4E9E2;
   }
   .myButton:active {
    position:relative;
     top:1px;
     box-shadow: 0px 0px 0px 0px #899599;
   }
  