.card-product {
  overflow: hidden;
  height: 80px;
  background: #F4E9E2;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}
.smallBanner {
  overflow: hidden;
  height: 30px;
  background: #Ffffff;
  display: flex;
  align-items: center;
}
.questionBanner {
  overflow: hidden;
  height: 30px;
  display: flex;
  align-items: center;
}
.info-card {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-left: 10px;
  padding-top: 10px
}
.submission-container {
  margin-top: 30px;
  margin-left: auto;
  margin-right: auto;
  width: 20em;
  }
  
  .section {
    border-color: #b7b7b7;
    border-style: solid;
    border-radius: 10px;
    background: #F4E9E2;
    width: 100%;
    margin: 0 0 0.5em;
    float: center;
    padding-bottom: 30px;
  }

  .calendar {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    box-sizing: border-box;
}
.modelboxbg{
  position:absolute;
  top:0;
  z-index:10000;
  width:100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
}
.modelbox{
  position:absolute;
  bottom:0;
  z-index:999999;
  width:100%;
  background: #fff;
}
picker-view-column{
  text-align: center;
}
view.model_picker{
  position: relative;
}
.button_model{
  height: 80rpx;
  width: 100%;
  background: #fff;
  position: relative;
  border-bottom: 1px solid #d9d9d9;
}
.button_model text{
    color: #007aff;
    position: absolute;
    background:transparent;
    border: none;
    line-height: 80rpx;
}
.button_model text:first-child{
  left: 32rpx;
}
.button_model text:last-child{
  right: 32rpx;
}